<div class="card pb-1 pl-1 pr-0">
  <img class="card-img-top img-fluid-width" src="<%= url_for(image) %>" alt="Card image cap">
  <div class="card-body py-2 text-center">
    <div class="form-check">
      <label class="form-check-label">
        <%= check_box_tag "album[remove_images][#{image.id}]", "true", false, { class: "form-check-input mr-0" } %>
        <!-- <input class="form-check-input" type="checkbox" value="" checked=""> -->
        <%= I18n.t('text.destroy') %>
      </label>
    </div>
  </div>
</div>