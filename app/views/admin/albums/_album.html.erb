<div class="col-xs-12 mb-4" id="album-<%= album.id %>">
	<div class="card p-3">
		<div class="list-group list-group-flush">
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Album.human_attribute_name("title") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if album.title.present? %>
	          <%= album.title %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	          <span class="badge badge-pill badge-warning"><%= I18n.t("text.hint") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Album.human_attribute_name("description") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if album.description.present? %>
	          <%= album.description %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	          <span class="badge badge-pill badge-warning"><%= I18n.t("text.hint") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Album.human_attribute_name("images") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if album.images.attached? %>
		    		<div class="row">
			    		<% album.images.limit(6).each do |image| %>
			    			<div class="pr-1 pb-1">
		          		<%= image_tag image, class: "img-fluid-width" %>
		          	</div>
		          <% end %>
	          </div>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	          <span class="badge badge-pill badge-warning"><%= I18n.t("text.hint") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
	      <%= link_to I18n.t('text.edit'), edit_admin_album_path(album), class: "btn btn-primary" %>
	      <%= link_to I18n.t('text.destroy'), [:admin, album], method: :delete, data: { confirm: I18n.t("text.confirm_destroy") }, class: "btn btn-danger btn-sm float-right" %>
	    </li>
		</div>
	</div>
</div>