<div class="col-12 mb-4" id="story-<%= story.id %>">
	<div class="card p-3">
		<div class="list-group list-group-flush">
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Story.human_attribute_name("title") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if story.title.present? %>
	          <%= story.title %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-2"><%= Story.human_attribute_name("cover") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if story.cover.present? %>
	          <%= image_tag story.cover, class: "img-fluid-width" %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Story.human_attribute_name("description") %></h5>
		    </div>
	    	<% if story.description.present? %>
          <%= simple_format story.description, class: "mb-1" %>
        <% else %>
			    <p class="mb-1">
  	        <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
  	      </p>
        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
		    <div class="d-flex w-100 justify-content-between">
		      <h5 class="mb-1"><%= Story.human_attribute_name("published_on") %></h5>
		    </div>
		    <p class="mb-1">
		    	<% if story.published_on.present? %>
	          <%= story.published_on %>
	        <% else %>
	          <span class="text-muted"><%= I18n.t("text.attr_no_value") %></span>
	        <% end %>
	      </p>
		  </li>
		  <li class="list-group-item flex-column align-items-start">
	      <%= link_to I18n.t('text.edit'), edit_admin_story_path(story), class: "btn btn-primary" %>
	      <%= link_to I18n.t('text.destroy'), [:admin, story], method: :delete, data: { confirm: I18n.t("text.confirm_destroy") }, class: "btn btn-danger btn-sm float-right" %>
	    </li>
		</div>
	</div>
</div>